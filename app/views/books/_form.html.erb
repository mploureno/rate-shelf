<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
  <%= select_tag( options_for_select(@categories),
                   :category_id, 
                   :prompt => "Genre") %>

  <%= f.file_field :book_cover %>
  <%= f.input      :title, label: "Book Title" %>
  <%= f.input      :description %>
  <%= f.input      :author %>
  <%= f.button     :submit, :class => 'btn-custom2' %>
<% end %>