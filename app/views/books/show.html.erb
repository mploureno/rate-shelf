<div class="cover">
	<%= image_tag @book.book_cover.url(:book_show), class: 'book-show' %>
<div>
  <div class="book-info">	
		<h2 class="book-title"><%= @book.title %></h2>	
		<h3 class="book-author"><spam>From</spam> <%= @book.author %></h3>
		<h4 class="avg-rating">Genre: <%= @book.category.name %></h4>
		<div class="average-review-rating" data-score="<%= @average_review %>"></div>
		<span class="number-of-reviews"><%= @book.reviews.count %> reviews</span>
		<p class="book-desc"><%= @book.description %></p>
  </div>	
</div>	
<div class="row">
	<div class="col-md-4">
	  <div>
	    <div class="reviews">  	
				<!-- Where the ratings feature will go -->
				<h1>Reviews</h1>	
				<%= render @book.reviews %>
	    </div>
	  </div>
	</div>
</div>
<div class="links btn-group">		
	<%= link_to 'Back to Bookcase', root_path, class: 'btn btn-custom' %>
	<% if user_signed_in? %>
	  <%= link_to 'Write a customer review', new_book_review_path(@book), class: 'btn btn-custom' %>
		<% if @book.user_id == current_user.id %>
			<%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-custom' %>
			<%= link_to 'Delete', book_path(@book), 
														method: :delete, 
														data: { confirm: 'Are you sure?' },
														class: 'btn btn-custom' %>
		<% end %>
	<% end %>	
</div>
<script>
  $('.review-rating').raty({
    readOnly: true,
    score: function() {
    	return $(this).attr('data-score');
    },
    path: '/assets/'   
		});
</script>
<script>
  $('.average-review-rating').raty({
  	readOnly: true,
  	path: '/assets',
  	score: function() {
  	  return $(this).attr('data-score')	
  	}
  });	
</script>                   		
