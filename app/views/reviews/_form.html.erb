<div class="form">  
  <%= simple_form_for([@book, @book.reviews.build]) do |f| %>
      <div id="rating-form"></div>	
      <%= f.input  :comment %>
      <%= f.button :submit %>
  <% end %>
</div>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });	
</script>